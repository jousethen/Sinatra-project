<h2>Edit Course</h2>
<form action="/courses/<%=@course.slug %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch">
  <h3>Course Information</h3>
  <input type="text" name="course[name]" value="<%= @course.name %>" required><br><br>

  <h3>Student List</h3>
  <select name="[course][students][]" multiple> 
    <% @students.each do |student| %>
    <option value="<%=student.id %>" <%= 'selected' if @course.students.include?(student) %> ><%= student.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Edit">
</form>

<form action="/courses/<%=@course.slug %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

