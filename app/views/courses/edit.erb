<h2>Edit Course</h2>
<form action="/courses/<%=@course.slug %>" method="POST">
  
  <h3>Course Information</h3>
  <input type="text" name="course[name]" value="<%= @course.name %>" required><br><br>

  <h3>Student List</h3>
  <select name="[course][students][]" multiple> 
    <% @students.each do |student| %>
    <option value="<%=student.id %>"><%= student.name %> <%= 'autofocus' if @course.students.include?(student) %></option>
    <% end %>
  </select>

  <input type="submit" value="Edit">
</form>


